    <script>
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(sec => {
                sec.classList.remove('active-section');
            });
            document.getElementById(sectionId).classList.add('active-section');
        }

        function generatePaymentCode() {
            return Math.floor(10000000 + Math.random() * 90000000)
                .toString().replace(/(\d{4})(\d{4})/, '$1 $2');
        }

        function showPayment(package, amount) {
            const code = generatePaymentCode();
            document.getElementById('paymentCode').textContent = code;
            document.getElementById('telebirrModal').style.display = 'flex';
            
            localStorage.setItem('currentPayment', JSON.stringify({
                package: package,
                amount: amount,
                code: code.replace(/\s/g, ''),
                timestamp: Date.now()
            }));

            setInterval(() => {
                alert(`Checking payment for code: ${code}`);
            }, 120000);
        }

        function closePayment() {
            document.getElementById('telebirrModal').style.display = 'none';
        }

        function withdraw() {
            alert("Withdrawal request sent to 094488500!");
        }

        function showCustomPayment() {
            const amount = prompt("Enter recharge amount:");
            if(amount) showPayment('CUSTOM', amount);
        }

        window.onload = () => showSection('home');
    </script>
